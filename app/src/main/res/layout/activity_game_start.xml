                app:ship_type="ship_type_t_shape" />

            <amov.danieloliveira.batalhanaval.views.ShipPartView
                android:id="@+id/ship_part_16"
                android:background="@drawable/border"
                app:border_bottom="true"
                app:border_left="false"
                app:border_right="true"
                app:border_top="true"
                app:ship_number="7"
                app:ship_type="ship_type_t_shape" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <amov.danieloliveira.batalhanaval.views.ShipPartView
                android:id="@+id/ship_part_9"
                android:background="@drawable/border"
                app:border_bottom="true"
                app:border_left="true"
                app:border_right="false"
                app:border_top="true"
                app:ship_number="5"
                app:ship_type="ship_type_three" />

            <amov.danieloliveira.batalhanaval.views.ShipPartView
                android:id="@+id/ship_part_8"
                android:background="@drawable/border"
                app:border_bottom="true"
                app:border_left="false"
                app:border_right="false"
                app:border_top="true"
                app:ship_number="5"
                app:ship_type="ship_type_three" />

            <amov.danieloliveira.batalhanaval.views.ShipPartView
                android:id="@+id/ship_part_7"
                android:background="@drawable/border"
                app:border_bottom="true"
                app:border_left="false"
                app:border_right="true"
