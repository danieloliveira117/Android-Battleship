<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.GameStartActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civ_adversary_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_color="@color/gray"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorAccent"
        app:civ_shadow_radius="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_adversary_username"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_adversary_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/light"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical|start"
        app:layout_constraintBottom_toBottomOf="@+id/civ_adversary_avatar"
        app:layout_constraintLeft_toRightOf="@+id/civ_adversary_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/civ_adversary_avatar" />

    <amov.danieloliveira.batalhanaval.views.ShipDock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/civ_adversary_avatar" />

    <include layout="@layout/board_view" />
</android.support.constraint.ConstraintLayout>