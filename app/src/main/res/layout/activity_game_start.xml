            <android.support.v7.widget.AppCompatTextView android:layout_height="match_parent" />

            <android.support.v7.widget.AppCompatTextView android:layout_height="match_parent" />

        </TableRow>
    </TableLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_place_ships"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/transparent"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirm_placement"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbl_shipyard">

        <amov.danieloliveira.batalhanaval.views.BattleshipBoard
            android:id="@+id/tbl_place_ships"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_rotate_ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:onClick="onRotateShip"
        android:text="@string/rotate_ship"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_confirm_placement"
        app:layout_constraintTop_toTopOf="@+id/btn_confirm_placement" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_confirm_placement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:onClick="onConfirmPlacement"
        android:padding="@dimen/text_margin"
        android:text="@string/confirm_placement"
        android:textColor="@color/light"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_rotate_ship"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>